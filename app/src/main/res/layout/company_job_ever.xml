<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dip"
    android:orientation="horizontal"
    android:background="#FFFFFF"
    android:layout_marginBottom="10dip"
    >
    <ImageView
        android:layout_width="75dip"
        android:layout_height="75dip"
        android:layout_margin="15dip"
        android:background="@drawable/company_pic3_alibaba"
        android:id="@+id/job_pic"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dip">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/job_id"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="视频制作实习生"
                android:textSize="15sp"
                android:layout_marginBottom="8dip"
                android:layout_alignParentLeft="true"
                android:id="@+id/job_name"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="03-18 10:40"
                android:id="@+id/apply_time"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2k-5k/月"
            android:textSize="15sp"
            android:id="@+id/job_offer"
            android:layout_marginBottom="8dip"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dip"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="18dip"
                android:layout_height="18dip"
                android:background="@drawable/location"
                android:layout_gravity="bottom"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="杭州市余杭区良渚文化村"
                android:textSize="14dip"
                android:id="@+id/job_location"
                android:layout_gravity="bottom"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>