<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/wodeanniucontent"
              android:id="@+id/root_gerenziliao">
    <RelativeLayout
        style="@style/bigTitle">
        <ImageView
            style="@style/gerenziliao_xiaojiantou"
            android:id="@+id/backTojianli"/>
        <TextView
            style="@style/gerenziliao_biaoti"
            android:text="期望工作"/>
        <TextView
            style="@style/gerenziliao_xiaozi"
            android:text="保存"
            android:id="@+id/edit_btn"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编号"
            android:id="@+id/qwgz_list_id"
            android:visibility="gone"
            />
        <LinearLayout
            style="@style/gerenziliao_liebiaobg"
            android:layout_marginTop="10dp">
            <TextView
                style="@style/gerenziliao_liebiao1"
                android:text="职位"/>
            <TextView
                style="@style/gerenziliao_liebiao2"
                android:text="安卓工程师"
                android:id="@+id/qwgz_job"/>
        </LinearLayout>
        <LinearLayout
            style="@style/gerenziliao_liebiaobg">
            <TextView
                style="@style/gerenziliao_liebiao1"
                android:text="城市"/>
            <TextView
                style="@style/gerenziliao_liebiao2"
                android:text="杭州"
                android:id="@+id/qwgz_city"/>
        </LinearLayout>

        <LinearLayout
            style="@style/gerenziliao_liebiaobg">
            <TextView
                style="@style/gerenziliao_liebiao1"
                android:text="天数/周"/>
            <TextView
                style="@style/gerenziliao_liebiao2"
                android:text="5"
                android:id="@+id/qwgz_day_require"/>
        </LinearLayout>
        <LinearLayout
            style="@style/gerenziliao_liebiaobg"
            android:paddingRight="10dp">
            <TextView
                style="@style/gerenziliao_liebiao1"
                android:text="月份"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#EAEAEA"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="2016.07"
                android:id="@+id/DateBegin"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="---"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#EAEAEA"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="2017.07"
                android:id="@+id/DateEnd"
                />
        </LinearLayout>
        <LinearLayout
            style="@style/gerenziliao_liebiaobg">
            <TextView
                style="@style/gerenziliao_liebiao1"
                android:text="日薪"/>
            <TextView
                style="@style/gerenziliao_liebiao2"
                android:text="120"
                android:id="@+id/qw_salarybyday"/>
        </LinearLayout>
        <LinearLayout
            style="@style/gerenziliao_liebiaobg">
            <TextView
                style="@style/gerenziliao_liebiao1"
                android:text="到岗日期"/>
            <TextView
                style="@style/gerenziliao_liebiao2"
                android:text="2016-07-01"
                android:id="@+id/daogangrq"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
