<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/usual_gray">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="@color/white"
        android:layout_gravity="center_vertical"
        android:layout_alignParentTop="true"
        >
        <TextView
            android:layout_width="70dip"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="取消"
            android:textSize="15dp"
            android:textColor="@color/light_gray"
            android:layout_alignParentLeft="true"
            android:id="@+id/close_this"/>
        <Button
            android:layout_width="70dip"
            android:layout_height="match_parent"
            android:gravity="center_vertical|center_horizontal"
            android:text="发布"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:background="@color/normal_green"
            android:layout_alignParentRight="true"
            android:id="@+id/wen_send"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dip">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="标题"
        android:textSize="25sp"
        android:textColor="@color/dark_gray"
        android:layout_margin="10dip"
        android:id="@+id/wen_title"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:gravity="left|top"
        android:minLines="6"
        android:hint="内容"
        android:textSize="20sp"
        android:layout_margin="10dip"
        android:background="@null"
        android:padding="10dip"
        android:id="@+id/wen_content"
        />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:src="@drawable/photo"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="5dip"
            android:id="@+id/pic"/>
        <ImageView
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:src="@drawable/image"
            android:layout_toRightOf="@+id/pic"/>
        <!--<ImageView
            android:layout_width="40dip"
            android:layout_height="40dip"
            android:src="@drawable/icon_selected_xiaozhitiao"
            android:gravity="right"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:id="@+id/wen_send"
            android:clickable="true"/>-->
            <LinearLayout
                android:layout_width="80dip"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:paddingTop="15dip"
                android:layout_alignParentRight="true"
                android:id="@+id/select_group"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:textColor="@color/normal_green"
                    android:textSize="13sp"
                    android:text="全部"
                    android:id="@+id/all_group"/>

                <ImageView
                    android:layout_width="15dip"
                    android:layout_height="15dip"
                    android:background="@drawable/open_list2"
                    android:layout_marginTop="2dip"
                    android:id="@+id/select_group_btn"/>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>