<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/hjjl_edit_ever"
              android:orientation="horizontal"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:id="@+id/del_linear"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/delete_icon"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
              style="@style/wodeanniucontent"
              android:orientation="vertical"
              android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="编号"
        android:id="@+id/hjjl_list_id"
        android:visibility="gone"
        />
        <LinearLayout
            style="@style/gerenziliao_liebiaobg"
            android:layout_marginTop="10dp">
            <TextView
                style="@style/gerenziliao_liebiao1"
                android:text="奖项名称"/>
            <TextView
                style="@style/gerenziliao_liebiao2"
                android:text="浙江省xxx大赛"
                android:id="@+id/prizeName"/>
        </LinearLayout>
        <LinearLayout
            style="@style/gerenziliao_liebiaobg">
            <TextView
                style="@style/gerenziliao_liebiao1"
                android:text="奖项级别"/>
            <TextView
                style="@style/gerenziliao_liebiao2"
                android:text="一等奖"
                android:id="@+id/prize_degree"/>
        </LinearLayout>


        <LinearLayout
            style="@style/gerenziliao_liebiaobg">
            <TextView
                style="@style/gerenziliao_liebiao1"
                android:text="获奖时间"/>
            <TextView
                style="@style/gerenziliao_liebiao2"
                android:text="2016-06"
                android:id="@+id/prize_gettime"/>

        </LinearLayout>


    </LinearLayout>
</LinearLayout>