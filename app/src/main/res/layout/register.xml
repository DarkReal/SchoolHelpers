<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/register_linear">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dip">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:padding="15dip"
            android:layout_gravity="center_horizontal|center_vertical">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="110dip"
                android:text="手机号"
                android:textSize="18sp"
                android:textColor="@color/black"
                />
            <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="请输入你的手机号"
                android:textSize="17sp"
                android:background="@null"
                android:id="@+id/phone"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="0dp"
            android:layout_gravity="center_horizontal|center_vertical">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="110dip"
                android:text="手机验证码"
                android:textSize="18sp"
                android:textColor="@color/black"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <EditText
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:hint="请输入短信验证码"
                    android:textSize="17sp"
                    android:background="@null"
                    android:id="@+id/verification"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="7dip"
                    android:text="获取验证码"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:gravity="center_vertical"
                    android:background="@color/normal_green"
                    android:layout_marginLeft="15dip"
                    android:id="@+id/yzm"
                    />
            </LinearLayout>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:padding="15dip"
            android:layout_gravity="center_horizontal|center_vertical">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="110dip"
                android:text="真实姓名"
                android:textSize="18sp"
                android:textColor="@color/black"
                />
            <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="请输入你的真实姓名"
                android:textSize="17sp"
                android:background="@null"
                android:id="@+id/username"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:padding="15dip"
            android:layout_gravity="center_horizontal|center_vertical">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="110dip"
                android:text="密码"
                android:textSize="18sp"
                android:textColor="@color/black"
                />
            <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="请输入密码"
                android:textSize="17sp"
                android:background="@null"
                android:password="true"
                android:id="@+id/password"
                />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:padding="15dip"
            android:layout_gravity="center_horizontal|center_vertical">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="110dip"
                android:text="确认密码"
                android:textSize="18sp"
                android:textColor="@color/black"
                />
            <EditText
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:hint="请再次输入确认密码"
                android:textSize="17sp"
                android:background="@null"
                android:password="true"
                android:id="@+id/password_again"
                />
        </TableRow>

    </TableLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_border_orange"
        android:text="免费注册"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:id="@+id/free_register"
        />
</LinearLayout>