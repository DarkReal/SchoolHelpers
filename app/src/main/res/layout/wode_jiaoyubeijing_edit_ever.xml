<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/jybj_edit_ever"
              android:orientation="horizontal"
              >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:id="@+id/del_linear"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/delete_icon"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
<LinearLayout style="@style/wodeanniucontent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编号"
            android:id="@+id/jybj_list_id"
            android:visibility="gone"
            />
        <LinearLayout
            style="@style/gerenziliao_liebiaobg"
            android:layout_marginTop="10dp">
            <TextView
                style="@style/gerenziliao_liebiao1"
                android:text="学校"/>
            <TextView
                style="@style/gerenziliao_liebiao2"
                android:text="浙江科技学院"
                android:id="@+id/school"/>
        </LinearLayout>
        <LinearLayout
            style="@style/gerenziliao_liebiaobg">
            <TextView
                style="@style/gerenziliao_liebiao1"
                android:text="专业"/>
            <TextView
                style="@style/gerenziliao_liebiao2"
                android:text="软件工程"
                android:id="@+id/majorIn"/>
        </LinearLayout>

        <LinearLayout
            style="@style/gerenziliao_liebiaobg">
            <TextView
                style="@style/gerenziliao_liebiao1"
                android:text="学历"/>
            <TextView
                style="@style/gerenziliao_liebiao2"
                android:text="本科"
                android:id="@+id/education"/>
        </LinearLayout>
        <LinearLayout
            style="@style/gerenziliao_liebiaobg"
            android:paddingRight="10dp">
            <TextView
                style="@style/gerenziliao_liebiao1"
                android:text="在校时间"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#EAEAEA"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="2013"
                android:id="@+id/timeBegin"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="---"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="#EAEAEA"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:gravity="center_vertical|center_horizontal"
                android:text="2017"
                android:id="@+id/timeEnd"
                />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>