<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/wodeanniucontent"
              android:background="#ffffff"
              android:id="@+id/root_addfriend">

    <RelativeLayout
        style="@style/bigTitle">
        <ImageView
            style="@style/gerenziliao_xiaojiantou"
            android:id="@+id/backToxiaozhitiao_addfriend"/>
        <TextView
            style="@style/gerenziliao_biaoti"
            android:text="推荐联系人"
            android:textColor="@color/xiaozhitiao_message_lianxiren"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#eaeaea"/>

    <!--<EditText-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:hint="请输入想要搜索的姓名"-->
    <!--android:textSize="12dp"-->
    <!--android:background="#ffffff" />-->
    <EditText
        android:id="@+id/search_edit"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:layout_margin="3dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/magnifying_glass"
        android:drawablePadding="2dp"
        android:ellipsize="none"
        android:hint="请输入想要搜索的姓名"
        android:paddingBottom="2dp"
        android:gravity="center_horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="30dp"
        android:paddingTop="2dp"
        android:singleLine="true"
        android:textColor="#ff000000"
        android:textColorHint="#ffcccccc"
        android:textSize="12sp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#eaeaea"/>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.xxw.student.myView.addfriendListView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/addfriendListView">
        </com.xxw.student.myView.addfriendListView>
    </LinearLayout>
</LinearLayout>
