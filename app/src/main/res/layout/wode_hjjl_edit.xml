<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/wodeanniucontent"
              android:id="@+id/root_gerenziliao">
    <RelativeLayout
        style="@style/bigTitle"
        android:layout_alignParentTop="true"
        android:id="@+id/hjjl_top_line">
        <ImageView
            style="@style/gerenziliao_xiaojiantou"
            android:id="@+id/backTojianli"/>
        <TextView
            style="@style/gerenziliao_biaoti"
            android:text="获奖经历"/>
        <TextView
            style="@style/gerenziliao_xiaozi"
            android:text="编辑"
            android:id="@+id/edit_btn"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hjjl_top_line"
        android:layout_above="@+id/add_reward"
        android:orientation="vertical"
        >
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hjjl_list"
            >
        </ListView>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="暂无获奖经历"
            android:textSize="18sp"
            android:textColor="@color/normal_green"
            android:gravity="center_horizontal|center_vertical"
            android:visibility="gone"
            android:id="@+id/noneWord"
            android:layout_marginTop="20dp"
            />
    </LinearLayout>
    <LinearLayout
        style="@style/jianlibutton"
        android:gravity="center_horizontal|center_vertical"
        android:layout_alignParentBottom="true"
        android:id="@+id/add_reward">
        <TextView
            style="@style/jianlibtntxtadd"
            />
        <TextView
            style="@style/jianlibtntxt"
            android:text="添加获奖经历"
            />
    </LinearLayout>
</RelativeLayout>
