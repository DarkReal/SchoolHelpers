<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:clickable="true"
              >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="@color/white"
        android:layout_alignParentTop="true"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:id="@+id/return_before"
            android:paddingRight="15dip">
        <ImageView
            android:layout_width="20dip"
            android:layout_height="20dip"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@drawable/return_before"
            android:gravity="center"
            android:layout_marginLeft="10dip"
            android:layout_alignParentLeft="true"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_horizontal|center_vertical"
            android:text="职位详情"
            android:textSize="20dp"
            android:textColor="@color/normal_green"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:layout_width="13dip"
            android:layout_height="15dip"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:background="@drawable/share"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:id="@+id/share_img"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="47dp"
        android:id="@+id/job_detail_content"
        >
    <com.xxw.student.myView.mineScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:fillViewport="true"
        android:id="@+id/sc"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        >
    <LinearLayout
        android:id="@+id/company_list_title"
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="5dip">
        <ImageView
            android:layout_width="75dip"
            android:layout_height="75dip"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="10dip"
            android:background="@drawable/company_pic3_alibaba"
            android:id="@+id/company_pic"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dip"
            android:layout_gravity="center_vertical"
            android:orientation="vertical"
            android:padding="7dip"
            android:layout_marginTop="10dip"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="视频制作实习生"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:layout_marginBottom="15dip"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/job_name"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="03-18 10:40"
                    android:textColor="@color/black"
                    android:id="@+id/apply_time"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dip"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2k-5k/月"
                android:textSize="15sp"
                android:id="@+id/job_offer"
                android:textColor="@color/normal_green"
                />

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_marginTop="5dip">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dip"
            >
            <TextView
                android:layout_width="100dip"
                android:layout_height="match_parent"
                android:text="工作地点"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="浙江省杭州市滨江区网商路599号"
                android:textColor="@color/black"
                android:layout_marginLeft="10dip"
                android:id="@+id/job_address"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="100dip"
                android:layout_height="match_parent"
                android:text="工作日期"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="每月不少于120小时"
                android:textColor="@color/black"
                android:layout_marginLeft="10dip"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="100dip"
                android:layout_height="match_parent"
                android:text="工作时间"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="工作日9:00-17:00"
                android:textColor="@color/black"
                android:layout_marginLeft="10dip"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="100dip"
                android:layout_height="match_parent"
                android:text="福       利"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="每天全勤可以享受免费午餐"
                android:textColor="@color/black"
                android:layout_marginLeft="10dip"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="100dip"
                android:layout_height="match_parent"
                android:text="招聘人数"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="10名（剩余3名）"
                android:textColor="@color/black"
                android:layout_marginLeft="10dip"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"
            android:layout_gravity="center_vertical">
            <TextView
                android:layout_width="100dip"
                android:layout_height="match_parent"
                android:text="截止时间"
                android:textColor="@color/black"
                android:gravity="center_horizontal"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="2016-04-17  23:59:59"
                android:textColor="@color/black"
                android:layout_marginLeft="10dip"
                />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="8dip"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="具体内容"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="20dip"
            android:layout_marginBottom="5dip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="【岗位描述】"
            android:textColor="@color/normal_green"
            android:layout_marginLeft="15dip"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. 拍摄视频，必要时跟组外出拍摄"
            android:textColor="@color/black"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="10dip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.进行视频后期剪辑"
            android:textColor="@color/black"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="10dip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="【任职资格】"
            android:textColor="@color/normal_green"
            android:layout_marginLeft="15dip"
            android:layout_marginTop="10dip"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1. 会熟练使用视频制作软件"
            android:textColor="@color/black"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="10dip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.不怕吃苦"
            android:textColor="@color/black"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="10dip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.勤劳热情"
            android:textColor="@color/black"
            android:layout_marginLeft="20dip"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="10dip"/>

        </LinearLayout>


    </LinearLayout>
    </com.xxw.student.myView.mineScrollView>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dip"
        android:background="@color/usual_gray"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        >
        <com.xxw.student.view.DrawableCenterTextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="投简历"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            android:drawableRight="@drawable/resume"
            android:background="@color/normal_green"
            android:layout_marginRight="10dip"
            android:id="@+id/up_resume"
            />
        <com.xxw.student.view.DrawableCenterTextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="收藏"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:layout_gravity="center_vertical"
            android:drawableRight="@drawable/collect"
            android:background="@color/normal_blue"
            android:id="@+id/collect"
            />
    </LinearLayout>
</RelativeLayout>