<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dip"
        android:background="@color/white"
        >
        <TextView
            android:layout_width="60dip"
            android:layout_height="match_parent"
            android:text="取消"
            android:textSize="15dip"
            android:layout_alignParentLeft="true"
            android:gravity="center_horizontal|center_vertical"
            android:textColor="@color/normal_green"
            android:id="@+id/select_cancel"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="选择城市"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/city_linear"
        >
        <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:text="当前定位"
        android:textColor="@color/black"
        android:background="@color/usual_gray"
        android:gravity="center_vertical"
        android:paddingLeft="10dip"
        android:id="@+id/city_type_line"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="10dp"
            android:paddingLeft="120px"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="杭州"
                android:textColor="@color/light_gray"
                android:textSize="15sp"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/img_border"
                android:id="@+id/city_line"
                />
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="热门城市"
            android:textColor="@color/black"
            android:background="@color/usual_gray"
            android:gravity="center_vertical"
            android:paddingLeft="10dip"
            android:id="@+id/hot_city_line"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingTop="10dp"
            android:paddingLeft="120px"
            android:paddingBottom="10dp"
            android:id="@+id/hot_city_arr"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="北京"
                    android:textColor="@color/light_gray"
                    android:textSize="15sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/img_border"
                    android:id="@+id/hot_city_1"
                    android:layout_marginRight="25dip"
                    />
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="上海"
                    android:textColor="@color/light_gray"
                    android:textSize="15sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/img_border"
                    android:id="@+id/hot_city_2"
                    android:layout_marginRight="25dip"
                    />
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="天津"
                    android:textColor="@color/light_gray"
                    android:textSize="15sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/img_border"
                    android:id="@+id/hot_city_3"
                    android:layout_marginRight="25dip"
                    />
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="重庆"
                    android:textColor="@color/light_gray"
                    android:textSize="15sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/img_border"
                    android:id="@+id/hot_city_4"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dip"
                >
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="成都"
                    android:textColor="@color/light_gray"
                    android:textSize="15sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/img_border"
                    android:id="@+id/hot_city_5"
                    android:layout_marginRight="25dip"
                    />
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="广州"
                    android:textColor="@color/light_gray"
                    android:textSize="15sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/img_border"
                    android:id="@+id/hot_city_6"
                    android:layout_marginRight="25dip"
                    />
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="杭州"
                    android:textColor="@color/light_gray"
                    android:textSize="15sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/img_border"
                    android:id="@+id/hot_city_7"
                    android:layout_marginRight="25dip"
                    />
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="南京"
                    android:textColor="@color/light_gray"
                    android:textSize="15sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/img_border"
                    android:id="@+id/hot_city_8"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dip"
                >
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="深圳"
                    android:textColor="@color/light_gray"
                    android:textSize="15sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/img_border"
                    android:id="@+id/hot_city_9"
                    android:layout_marginRight="25dip"
                    />
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="苏州"
                    android:textColor="@color/light_gray"
                    android:textSize="15sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/img_border"
                    android:id="@+id/hot_city_10"
                    android:layout_marginRight="25dip"
                    />
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="武汉"
                    android:textColor="@color/light_gray"
                    android:textSize="15sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/img_border"
                    android:id="@+id/hot_city_11"
                    android:layout_marginRight="25dip"
                    />
                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="西安"
                    android:textColor="@color/light_gray"
                    android:textSize="15sp"
                    android:gravity="center_vertical|center_horizontal"
                    android:background="@drawable/img_border"
                    android:id="@+id/hot_city_12"
                    />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>